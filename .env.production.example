# ==============================================
# SpareTime Production Environment Configuration
# ==============================================
# Use this file as a template for your Coolify environment variables
# Copy these variables to Coolify's environment settings

# ==============================================
# NODE ENVIRONMENT
# ==============================================
NODE_ENV=production

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB Connection String (Required)
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sparetime
# For Coolify MongoDB: mongodb://sparetime:your-password@mongodb:27017/sparetime?authSource=admin
MONGODB_URI=mongodb://your-mongodb-connection-string

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Base URL for the application (Required)
# This should be your production domain
# Example: https://sparetime.yourdomain.com
NEXT_PUBLIC_BASE_URL=https://your-production-url.com

# ==============================================
# AUTHENTICATION & SECURITY (Required)
# ==============================================

# JWT Secret for token signing (MUST BE CHANGED IN PRODUCTION)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-AT-LEAST-64-CHARACTERS-LONG

# JWT Expiration (e.g., 7d, 24h, 30m)
JWT_EXPIRES_IN=7d

# Bcrypt Salt Rounds (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# ==============================================
# GOOGLE CALENDAR API (OAUTH) - Optional
# ==============================================
# Get credentials from: https://console.cloud.google.com/

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-production-url.com/api/auth/google/callback

# ==============================================
# APPLE CALENDAR API (iOS ONLY) - Optional
# ==============================================
# Get credentials from: https://developer.apple.com/

APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=

# ==============================================
# EMAIL SERVICE (FOR NOTIFICATIONS) - Optional
# ==============================================
# Example using SendGrid, Mailgun, or AWS SES

EMAIL_SERVICE_PROVIDER=
EMAIL_API_KEY=
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=SpareTime

# ==============================================
# REDIS CACHE (OPTIONAL - FOR PERFORMANCE)
# ==============================================

REDIS_URL=
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AWS S3 (FOR FILE STORAGE - AVATARS, ETC.) - Optional
# ==============================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=

# ==============================================
# LOGGING & MONITORING - Optional
# ==============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ==============================================
# RATE LIMITING
# ==============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# FEATURE FLAGS
# ==============================================

ENABLE_GOOGLE_CALENDAR=false
ENABLE_APPLE_CALENDAR=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# ==============================================
# PRODUCTION SETTINGS
# ==============================================

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable API documentation (set to false in production for security)
ENABLE_API_DOCS=false

# Debug mode (should be false in production)
DEBUG=false
